    (name guix-rust-past-crates) ; channel name can't be quoted
    (url "https://codeberg.org/guix/guix-rust-past-crates.git")
    (branch "trunk")
    (introduction
     (channel-introduction
      (version 0)
      (commit "1db24ca92c28255b28076792b93d533eabb3dc6a")
